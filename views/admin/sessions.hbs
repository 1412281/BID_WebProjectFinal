{{#section 'title'}}
    Quản lí sản phẩm
{{/section}}

<div id="wrapper">
    {{> nav_admin }}
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="page-title">
              <div class="title_left">
                <h1>Danh sách phiên đấu giá</h1>
              </div>
              <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Nhập tên sản phẩm để tìm kiếm">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Search</button>
                    </span>
                  </div>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>
                 <table class="table table-striped projects">
                  <thead>
                    <tr>
                        <th>Mã phiên</th>
                        <th>Tên sản phẩm</th>
                        <th>Loại sản phẩm</th>
                        <th>Người đăng</th>
                        <th>Giá khởi điểm</th>
                        <th>Bước giá</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products }}
                <tr>
                    <td>{{maphien}}</td>
                    <td>{{tensp}}</td>
                    <td>{{tenloai}}</td>
                    <td>{{nguoidang}}</td>
                    <td>{{giakhoidiem}}</td>
                    <td>{{buocgia}}</td>
                    <td>
                      <a href="" class="btn btn-danger btn-xs removeSession" data-id="{{maphien}}"><i class="fa fa-trash-o"></i> Delete </a>
                    </td>
                </tr>
                    {{/each}}
                </tbody>
                 </table>
            </div>
    </div>