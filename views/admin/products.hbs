{{#section 'title'}}
    Quản lý sản phẩm
{{/section}}

<div id="wrapper">
    {{> nav_admin }}
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="page-title">
              <div class="title_left">
                <h1>Quản lý sản phẩm</h1>
              </div>
              <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Nhập Email để tìm kiếm">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Search</button>
                    </span>
                  </div>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>
                 <table class="table table-striped projects">
                 	<thead>
                		<tr>
                    		<th>Tên sản phẩm</th>
                    		<th>Loại sản phẩm</th>
                    		<th>Giá khởi điểm</th>
                    		<th>Giá hiện tại</th>
                    		<th>Hình ảnh</th>
                        <th>Người đăng</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                		</tr>
            		</thead>
            		<tbody>
              			{{#each products }}
            		<tr>
                		<td>{{tensp}}</td>
                		<td>{{tenloai}}</td>
                    <td>{{giakhoidiem}}</td>
                		<td>{{giahientai}}</td>
                    <td><img src="{{url}}" class="icon" alt="icon" width=100></td>
                    <td>{{nguoidang}}</td>
                    <td>{{tentinhtrang}}</td>
                    <td>
                      <a href="/admin/products/view/{{maphien}}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                      <a href="" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                    </td>
            		</tr>
                		{{/each}}
            		</tbody>
                 </table>
            </div>
    </div>