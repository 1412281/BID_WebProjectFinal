{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assests/css/biddetails.css">
<link rel="stylesheet" type="text/css" href="/assests/css/home.css">
<link rel="stylesheet" type="text/css" href="/assests/css/product.css">
 
  <link rel="stylesheet" href="/assests/bootstrap-datetimepicker.css" />

{{/section}}

{{#section 'title'}}
    Thông tin sản phẩm
{{/section}}




<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		 <div class="row">
            <div class="row center-block">
                <a href="/">Trang chủ</a> > Thông tin sản phẩm
            </div>
            <br>
            <div class="container" id="tenSanPham">
                <div id="details">
                    <div class="detailtitle">
                        {{sanpham.tensp}}
                    </div>
                </div>
                <div class="detailImage col-md-3 thumbnail">
                    <img id="avatar" src="../{{sanpham.urlhinhanh}}" alt="" class="imageavatar">
                </div>
                <div class="col-md-4 detailinfo" id="chitietsanpham">
                    <div class="guestnumber">ID: {{sanpham.masp}}</div>
                    <div class="guestnumber">Loại: {{sanpham.tenloai}}</div>
                    <br>       
                    <div class="pull-left">
                        <button class="btn btn-warning" data-toggle="modal" data-target="#addProduct">Cập nhật</button>
                    </div>
                    <br>
                    <br>
                     <div class="pull-left">
                        <button class="btn btn-success" data-toggle="modal" data-target="#AuctionProduct">Đăng bán</button>
                    </div>
                </div>
                <div class="col-md-4 detailinfo" id="chitietsanpham">
                         
                </div>
            </div>
        </div>
        <div id="thumb-zone">
            <ul>
                <a id="thumb-control-left" href="javascript:void(0);"></a>
                <a id="thumb-control-right" href="javascript:void(0);"></a>
                
                {{#each imageurls}}
                <li>
                    <img src="../{{urlhinhanh}}" onmouseover="changeavatar('../{{urlhinhanh}}')"/>
                </li>
                {{/each}}
            </ul>
        </div>
        <br>
        <div class="tab nav nav-tabs">
            <button class="tablinks" onclick="opentab(event,'gioithieu')">Mô tả</button>
        </div>
        <div id="gioithieu" class="tabcontent detaildescription" style="display: block;">
            <div id="motahtml">
                {{sanpham.motaHTML}}
            </div>   
        </div>
	</div>
	<div class="col-md-1"></div>

<div id="addProduct" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" id="dialog-header" style="background-color:#F0AD4E;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Cập nhật sản phẩm</h4>
                </div>
                <form class="form-horizontal" method="post" action="/seller/updateproduct">
                <div class="modal-body">
                        
                        <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Mã sản phẩm</label>
                            <div class="col-md-6">
                                <input type="text" name="masanpham" class="form-control" readonly="true" value="{{sanpham.masp}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Tên sản phẩm</label>
                            <div class="col-md-6">
                                <input type="text" name="tensanpham" class="form-control" placeholder="Tên sản phẩm" aria-describedby="sizing-addon1" required="true" value="{{sanpham.tensp}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Loại sản phẩm</label>
                            <div class="col-md-6">
                                <select class="form-control" name="loai" id="">
                                {{#each danhsachloai}}
                                   
                                        <option value="{{maloai}}">{{tenloai}}</option>
                                    
                                {{/each}}
                            </select>
                            </div>
                        </div>

                    <div class="form-group">
                        <label class="control-label col-md-2" for="gioithieu">Giới thiệu</label>
                    </div>
                    
                        <div class="col-md-2"></div>
                        <textarea name="gioithieu"  class="form-control col-md-8">{{sanpham.motaHTML}}</textarea>
                    <div class="col-md-2"></div>        
            </div>
            
            <br>
          <div class="modal-footer" id="dialog-footer">
            <br>
            
            <button class="btn btn-warning" type="submit">Cập nhật</button>
          </div>

          </form>
        </div>
       </div>
    </div>

    
<div id="AuctionProduct" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" id="dialog-header" style="background-color: #5CB85C;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Đăng bán sản phẩm</h4>
                </div>
                

                <form class="form-horizontal" method="post" action="/seller/auctionproduct">
                <div class="modal-body" style="background-color:; ">
                     <div class="form-group">
                        <label class="control-label col-md-3" for="Ten"></label>
                        <div class="col-md-6">
                             <img src="../{{sanpham.urlhinhanh}}" alt="">
                        </div>
                    </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Mã sản phẩm</label>
                            <div class="col-md-6">
                                <input type="text" name="masanpham" class="form-control" readonly="true" value="{{sanpham.masp}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Tên sản phẩm</label>
                            <div class="col-md-6">
                                <input type="text" name="tensanpham" class="form-control" readonly="true" aria-describedby="sizing-addon1" required="true" value="{{sanpham.tensp}}">
                            </div>
                        </div>

                         <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Giá khởi điểm</label>
                            <div class="col-md-6">
                                <input type="number" name="giakhoidiem" class="form-control" aria-describedby="sizing-addon1" required="true">
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Bước giá</label>
                            <div class="col-md-6">
                                <input type="number" name="buocgia" class="form-control" aria-describedby="sizing-addon1" required="true">
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Giá mua ngay</label>
                            <div class="col-md-6">
                                <input type="number" name="giamuangay" class="form-control" aria-describedby="sizing-addon1">
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Thời gian bắt đầu</label>
                            <div class="col-md-6">
                                   <div class="controls input-append date form_datetime1" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                                    <input  class="form-control" type="text" value="" readonly>
                                    <span class="add-on"><i class="icon-remove"></i></span>
                                    <span class="add-on"><i class="icon-th"></i></span>

                                </div>
                                <input name="thgianbd" type="hidden" id="mirror_field1" value="" readonly />
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Thời gian kết thúc</label>
                            <div class="col-md-6">
                                
                                    <div class="controls input-append date form_datetime2" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                                    <input  class="form-control" type="text" value="" readonly>
                                    <span class="add-on"><i class="icon-remove"></i></span>
                                    <span class="add-on"><i class="icon-th"></i></span>
                                </div>   
                                  <input name="thgiankt" type="hidden" id="mirror_field2" value="" readonly />
                            </div>
                        </div>
                        


                


                    
                    <div class="col-md-2"></div>        
            </div>
            
            <br>
          <div class="modal-footer" id="dialog-footer">
            <br>
            
            <button class="btn btn-success" type="submit">Đăng bán</button>
          </div>

          </form>
        </div>
       </div>
    </div>



</div>
