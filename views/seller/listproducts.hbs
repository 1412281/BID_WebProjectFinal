{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assests/css/home.css">
<link rel="stylesheet" type="text/css" href="/assests/css/product.css">
{{/section}}

{{#section 'title'}}
    Danh sách sản phẩm
    
{{/section}}

<div class="col-md-1"></div>
<div class="col-md-10">


<!-- Page Content -->
<div class="panel">
	<div class="panel-title">
		<div class="tab nav nav-tabs" style="background-color: #ccc;">
	            <button class="tablinks" onclick="opentab(event,'dangdaugia')">Đang đấu giá</button>
	            <button class="tablinks" onclick="opentab(event,'chuadaugia')">Chưa đấu giá</button>
	            <button class="tablinks" onclick="opentab(event,'daban')">Đã bán</button>
	    </div>
	</div>
	<div class="panel-body">
    	<div id="dangdaugia" class="tabcontent" style="display: block;">
    	{{#each danhsachdangdaugia}}
				<div class="col-md-3">
				    <div class="thumbnail">
				        <a href="{{maphien}};{{masp}}">
				            <img src="{{urlhinhanh}}" alt="..." class="img-responsive">
				        </a>
				        <div class="productprice">
				            <div class="producttitle">{{tensp}}</div>
				            <div class="pull-right">
				            	<a href="lichsubids">Xem lịch sử</a>
				            </div>
				            <div class="guestnumber">Bids: {{soluotdau}}</div>
				            <div class="priceofguest">
				            	<a href="#">{{nguoigiugia}}</a>:{{number_format giahientai}} đ</div>	
				            <div class="timer">
				                <table align="center">
				                    <tbody>
				                        <tr>
				                            <td><img src="imgs/icons/timer.png"></td>
				                            <td class="countdown" value="{{thgiankt}}"></td>
				                        </tr>
				                    </tbody>
				                </table>
				            </div> 
				        </div>
				    </div>
				</div>
				{{/each}}
		</div>
		<div id="chuadaugia" class="tabcontent">
    	{{#each danhsachchuadang}}
				<div class="col-md-3">
				    <div class="thumbnail">
				        <a href="{{maphien}};{{masp}}">
				            <img src="{{urlhinhanh}}" alt="..." class="img-responsive">
				        </a>
				        <div class="productprice">
				            <div class="producttitle">{{tensp}}</div>
				             <div class="guestnumber">ID: {{masp}}</div>
				             <div class="guestnumber">{{tenloai}}</div>
				        </div>
				    </div>
				</div>
				{{/each}}
		</div>
		<div id="daban" class="tabcontent">
    	{{#each danhsachdaban}}
				<div class="col-md-3">
				    <div class="thumbnail" style="width: 100%;">
				    	<div class="picture-end">
                            <div class="status-end"></div>
                            <a href="">
			            		<img src="{{urlhinhanh}}" alt="..." class="img-responsive">
			       			 </a>
                        </div>
				        <div class="productprice">
				        
				            <div class="producttitle">{{tensp}}</div>
				       
				          
				            <div class="pull-right">
				            	<a href="lichsubids">Lịch sử</a>
				            </div>
				            <div class="priceofguest">
				            	Winner:<a href="#">{{winner}}</a>
				            </div>
				            <div class="pull-right">
				            	<a href="lichsubids">Nhận xét</a>
				            </div>
			            	<div class="priceofguest">{{number_format gia}} đ</div>

				          
				        </div>
				    </div>
				</div>
				{{/each}}
		</div>
    </div>
</div>
	

</div>
<div class="col-md-1"></div>

{{#section 'js'}}
	<script src="/assests/js/home.js" type="text/javascript" charset="utf-8"></script>
{{/section}}