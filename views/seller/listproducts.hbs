{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assests/css/home.css">
<link rel="stylesheet" type="text/css" href="/assests/css/product.css">
<link rel="stylesheet" type="text/css" href="/assests/css/dialogAddproduct.css">
{{/section}}

{{#section 'title'}}
    Danh sách sản phẩm
    
{{/section}}

<div class="col-md-1"></div>
<div class="col-md-10">


<!-- Page Content -->
<div class="panel">
	<div class="panel-title">
		<div class="tab nav nav-tabs" style="background-color: #ccc; border-radius: 10px;">
	            <button class="tablinks" onclick="opentab(event,'dangdaugia')">Đang đấu giá</button>
	            <button class="tablinks" onclick="opentab(event,'chuadaugia')">Chưa đấu giá</button>
	            <button class="tablinks" onclick="opentab(event,'daban')">Đã bán</button>
	            <div class="pull-right" style="margin: 10px;">
	            	<div class="btn btn-success glyphicon glyphicon-plus" title="Thêm sản phẩm" data-toggle="modal" data-target="#addProduct">
	            	</div>
	            </div>
	    </div>
	</div>
	<div class="panel-body">
    	<div id="dangdaugia" class="tabcontent" style="display: block;">
    	{{#each danhsachdangdaugia}}
				<div class="col-md-3">
				    <div class="thumbnail">
				        <a href="{{maphien}};{{masp}}">
				            <img id="avatar" src="{{urlhinhanh}}" alt="..." class="img-responsive">
				        </a>
				        <div class="productprice">
				            <div class="producttitle">{{tensp}}</div>
				            <div class="pull-right">
				            	<a href="lichsubids">Xem lịch sử</a>
				            </div>
				            <div class="guestnumber">Bids: {{soluotdau}}</div>
				            <div class="priceofguest">
				            {{#if giahientai}}
				            	<a href="#">{{nguoigiugia}}</a>:{{number_format giahientai}} đ</div>
				            {{/if}}	
				            <div class="timer">
				                <table align="center">
				                    <tbody>
				                        <tr>
				                            <td><img src="imgs/icons/timer.png"></td>
				                            <td class="countdown" value="{{thgiankt}}"></td>
				                        </tr>
				                    </tbody>
				                </table>
				            </div> 
				        </div>
				    </div>
				</div>
				{{/each}}
		</div>
		<div id="chuadaugia" class="tabcontent">
    	{{#each danhsachchuadang}}
				<div class="col-md-3">
				    <div class="thumbnail">
				        <a href="/seller/masp={{masp}}">
				            <img id="avatar" src="{{urlhinhanh}}" alt="..." class="img-responsive">
				        </a>
				        <div class="productprice">
				            <div class="producttitle">{{tensp}}</div>
				             <div class="guestnumber">ID: {{masp}}</div>
				             <div class="guestnumber">{{tenloai}}</div>
				        </div>
				    </div>
				</div>
				{{/each}}
		</div>
		<div id="daban" class="tabcontent">
    	{{#each danhsachdaban}}
				<div class="col-md-3">
				    <div class="thumbnail" style="width: 100%;">
				    	<div class="picture-end">
                            <div class="status-end"></div>
                            <a href="">
			            		<img id="avatar" src="{{urlhinhanh}}" alt="..." class="img-responsive">
			       			 </a>
                        </div>
				        <div class="productprice">
				        
				            <div class="producttitle">{{tensp}}</div>
				       
				          
				            <div class="pull-right">
				            	<a href="lichsubids">Lịch sử</a>
				            </div>
				            <div class="priceofguest">
				            	Winner:<a href="#">{{winner}}</a>
				            </div>
				            <div class="pull-right">
				            	<a href="lichsubids">Nhận xét</a>
				            </div>
			            	<div class="priceofguest">{{number_format gia}} đ</div>

				          
				        </div>
				    </div>
				</div>
				{{/each}}
		</div>
    </div>


	   <div id="addProduct" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" id="dialog-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thêm sản phẩm</h4>
                </div>
                <form class="form-horizontal" method="post" action="" enctype="multipart/form-data">
                <div class="modal-body">
              
                        <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Tên sản phẩm</label>
                            <div class="col-md-6">
                                <input type="text" name="tensanpham" class="form-control" placeholder="Tên sản phẩm" aria-describedby="sizing-addon1" required="true">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="Ten">Loại sản phẩm</label>
                            <div class="col-md-6">
                                <select class="form-control" name="loai" id="">
                                {{#each danhsachloai}}
								<option value="{{maloai}}">{{tenloai}}</option>
								{{/each}}
							</select>
                            </div>
                        </div>
                    
                    <div class="row">
                        <label class="control-label col-md-2" for="Ten" style="text-align: right;"> Chọn ảnh</label>
                        



						
						

                        
                        	
						<input name="danhsachanh" type="file" accept="image/*" multiple  required="true" />
						
                       




                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" for="gioithieu">Giới thiệu</label>
                    </div>
                    
                        <div class="col-md-2"></div>
                        <textarea name="gioithieu"  class="form-control col-md-8"></textarea>
					<div class="col-md-2"></div>		
			</div>
			
			<br>
		  <div class="modal-footer" id="dialog-footer">
		  	<br>
		  	
		    <button class="btn btn-success" type="submit">Thêm</button>
		  </div>

		  </form>
		</div>
       </div>
	</div>
	</div>


</div>
	

</div>
<div class="col-md-1"></div>

