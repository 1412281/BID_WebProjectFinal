{{#section 'css'}} <link rel="stylesheet" type="text/css" href="/assests/css/home.css">{{/section}}
 {{#section 'title'}} Đăng nhập {{/section}}


<div class="row">

    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

    </div>

    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Đăng nhập</h4>
            </div>
            <div class="modal-body">
                <form method="POST" action="login/signin">
                    <div class="form-group">
                        <label for="username" class="control-label">Tên đăng nhập:</label>
                        <input type="text" class="form-control" id="username" name="tenuser" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label">Mật khẩu:</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="form-group">
                        <a href="">Quên mật khẩu ?</a>
                        
                    </div>
                    <div class="form-group">
                        <a href="login/register">Đăng ký tài khoản mới.</a>
                    </div>
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                </form>
            </div>
            <div class="modal-footer">

            </div>

            <!-- /.modal-dialog -->
        </div>
    </div>


    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

    </div>

</div>