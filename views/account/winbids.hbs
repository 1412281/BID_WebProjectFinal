{{#section 'title'}}
    Danh sách sản phẩm bạn đã thắng
    
{{/section}}

<div class="col-md-1"></div>
<div class="col-md-10">

<h1>Sản phẩm bạn đã thắng cuộc</h1>
<!-- Page Content -->
<div class="panel">
	<div class="panel-body">
    	{{#each danhsachdathang}}
				<div class="col-md-3">
				    <div class="thumbnail" style="width: 100%;">
				    	<div class="picture-end">
                            <div class="status-end"></div>
                            <a href="../{{maphien}}-{{masp}}">
			            		<img id="avatar" src="../{{urlhinhanh}}" alt="..." class="img-responsive">
			       			 </a>
                        </div>
				        <div class="productprice">
				        
				            <div class="producttitle">{{tensp}}</div>
				            <div class="priceofguest">
				            	Người bán:<a href="#">{{nguoidang}}</a>
				            </div>
				            <div class="priceofguest">
				            	Winner:<a href="#">{{winner}}</a>
				            </div>
				            <div class="pull-right">
				            	<div class="btn btn glyphicon glyphicon-comment" title="gửi đánh giá"	 data-toggle="modal" data-target="#danhgianguoiban{{nguoidang}}">
	            				</div>
				            </div>
			            	<div class="priceofguest">{{number_format gia}} đ</div>

				          
				        </div>
				    </div>
				</div>

	<div id="danhgianguoiban{{nguoidang}}" class="modal fade" role="dialog">
		<!-- Modal content-->
			<div class="modal-content">
			<div class="modal-header" id="dialog-header">
			<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">Đánh giá người bán {{nguoidang}}</h4>
			</div>
					<form class="form-horizontal" method="post" action="../login/comment">
				<div class="modal-body">

					<div class="form-group">
						<label class="control-label col-md-3" for="Ten">Comment</label>
						<div class="col-md-6">
							<input type="hidden" name="nguoinhancomment" value="{{nguoidang}}">
							<input type="text" name="comment" class="form-control" placeholder="Tốt/Xấu..." aria-describedby="sizing-addon1" required="true">
						</div>

					</div>
			
					<div class="form-group">
						
						<label class="control-label col-md-3" for="Ten">Điểm</label>
						
						<div class="radio col-md-3">
						  <label><input type="radio" name="congtru" value="1" checked="checked">+1</label>
						  <label><input type="radio" name="congtru" value="-1">-1</label>
								</div>
							</div>

				<br>
					<div class="modal-footer" id="dialog-footer">
					<br>
						<button class="btn btn-success" type="submit">Gửi đánh giá</button>
					</div>
				</form>
				</div>
				</div>
				</div>
				{{/each}}
		</div>
    </div>

	</div>
   </div>
	</div>



	



	


